<% @offers.each do |offer| %>
  <% if policy(offer).edit? %>
    <% if offer.title != "" %>
      <%= link_to edit_offer_path(offer) do %>
        <i class="fas fa-pen">update</i>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<div id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
