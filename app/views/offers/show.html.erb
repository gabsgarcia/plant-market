<div class="container">
  <div class="row">
    <div class="card">
      <h1><%= @offer.title %></h1>
      <div class="icone">
        <% if current_user %>
          <%= link_to available_path, method: :patch, class: "status-#{@offer.status}" do %>
            <i class="fas fa-spa"></i> Change status
          <% end %>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th scope="row">Description</th>
              <td><%= @offer.description %></td>
            </tr>
            <tr>
              <th scope="row">Category</th>
              <td><%= @offer.category %></td>
            </tr>
            <tr>
              <th scope="row">Address</th>
              <td><%= @offer.address %></td>
            </tr>
            <%= cl_image_tag @offer.photo.key, height: 300, width: 400, crop: :fill %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% if current_user %>
  <%= link_to edit_offer_path do %>
    <i class="fas fa-edit"> edit</i>
    <%  %>
  <% end %>
  <%= link_to offer_path(@offer), method: :delete, class: 'btn btn-cancel', data: { confirm: 'Are you sure you want to delete this offer?' } do %>
    <i class="fas fa-trash"> destroy</i>
  <% end %>
<% end %>
