<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Create a new offer</h1>
      <%= simple_form_for @offer do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :address %>
        <%= f.input :category, collection: Offer::CATEGORIES %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

  <%= link_to offers_path do %>
    <i class="fa fa-history"></i> Back to Offer
  <% end %>
</div>
